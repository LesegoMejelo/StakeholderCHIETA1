@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Stakeholder Landing Page</title>
    <link rel="stylesheet" href="~/Content/EmployeeView/EmployeeLandingPage.css" />
</head>
<body>
    <!-- Top Bar -->
    <header class="topbar">
        <div class="container topbar-inner">
            <img class="logo" src="https://acfesa.co.za/sites/default/files/inline-images/CHIETA%20Logo.png" alt="CHIETA logo" />

            <!-- Settings in header -->
            <nav class="header-actions">
                <div class="menu" id="settings">
                    <button class="icon-btn" id="settings-btn" aria-haspopup="menu" aria-expanded="false">
                        <span class="hide-sm">Settings</span>
                    </button>

                    <div class="menu-popover" id="settings-menu" role="menu" hidden>
                        <a role="menuitem" href="@Url.Action("Profile", "Account")">Profile</a>
                        <a role="menuitem" href="@Url.Action("Notifications", "Account")">Notifications</a>
                        <div class="menu-sep" role="separator"></div>
                        <div class="menu-sep" role="separator"></div>
                        <a role="menuitem" href="@Url.Action("Logout", "Account")" class="danger">Sign out</a>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main class="container page">
        <!-- Decorative shapes -->
        <div class="decor blob-right"></div>
        <div class="decor arc-left"></div>
        <div class="decor arc-right-bottom"></div>

        <!-- Welcome -->
        <section class="welcome">
            <h1>Welcome @User.Identity.Name</h1>
            <p class="tagline">This is your personalised landing page, equipt for your every need</p>

            <div class="summary-grid">
                <a id="link-appointments" class="summary-card" href="@Url.Action("List", "Appointment")">
                    <h3>Upcoming Appointments</h3>
                    <ul id="upcoming-list" class="mini-list"><li class="muted">Loading..</li></ul>
                </a>

                <a id="link-inquiries" class="summary-card" href="@Url.Action("List", "Inquiry")">
                    <h3>Recent Inquiries</h3>
                    <ul id="inquiries-list" class="mini-list"><li class="muted">Loading…</li></ul>
                </a>
            </div>
        </section>

        <hr class="divider" />

        <!-- Actions -->
        <section class="actions">
            <h2>Select your desired action</h2>
            <p class="sub">
                You can choose from the following depending on what you want to do. Each action allows you to interact with your advisor in an easier manner and you can see the progress of each.
            </p>

            <div class="actions-grid">
                <div class="action-card">
                    <div class="card-hero" aria-hidden="true"></div>
                    <h3><a href="~/Views/EmployeeViews/AppointmentTracker.cshtml">Check your appointments</a></h3>
                    <p>You can check all the appointments made with you. Each appointment will have the option to accept or decline.</p>
                    <button class="btn" data-nav="@Url.Action("Booking", "Appointment")">Go</button>
                </div>

                <div class="action-card">
                    <div class="card-hero" aria-hidden="true"></div>
                    <h3><a href="@Url.Action("Create", "Inquiry")">Track your Inquiries </a></h3>
                    <p>All the inquiries sent to you can be accessed via this page and updates can be made.</p>
                    <button class="btn" data-nav="@Url.Action("Create", "Inquiry")">Go</button>
                </div>

                <div class="action-card">
                    <div class="card-hero" aria-hidden="true"></div>
                    <h3><a href="@Url.Action("Track", "Inquiry")">Book an Office Space</a></h3>
                    <p>Book the office that meets the needs of all your meetings</p>
                    <button class="btn" data-nav="@Url.Action("Track", "Inquiry")">Go</button>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer bar -->
    <footer class="footer">
        <div class="footer-band"></div>
        <div class="gold-box"></div>
    </footer>

    <script src="~/Content/EmployeeView/js/EmployeeLanding.js"></script>
</body>
</html>
