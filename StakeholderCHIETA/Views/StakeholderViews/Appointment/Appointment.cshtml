@model List<Staekholder_CHIETA_X.Controllers.AdvisorViewModel>

@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Book Appointment</title>
    <link rel="stylesheet" href="~/Content/StakeholderView/AppointmentBooking.css" />

</head>
<body>
    <!-- Decorative circles as full page background -->
    <div class="decor blob-right" aria-hidden="true"></div>
    <div class="decor arc-left" aria-hidden="true"></div>
    <div class="decor arc-right-bottom" aria-hidden="true"></div>

     <!-- Header -->
    <header class="topbar">
        <div class="container topbar-inner">
            <!-- Left: Brand -->
            <div class="brand">
                <img class="logo" src="/Content/StakeholderView/StakeholderLandingImages/Logo.png" alt="CHIETA logo" />
                <div class="divider"></div>
                <div class="page-title">Schedule an Appointment</div>
            </div>

            <!-- Center: Navigation -->
            <div class="center-nav">
                <!-- Appointments Navigation -->
                <div style="position: relative;">
                    <button class="nav-btn" id="appointments-btn" aria-haspopup="menu" aria-expanded="false">
                        <span>Appointments</span>
                    </button>
                    <nav class="nav-popover" id="appointments-menu" role="menu" hidden>
                        <a role="menuitem" href="/Inquiry/TrackAppointment">My Appointments</a>
                        <a role="menuitem" href="/Appointment/Index">Schedule New</a>
                    </nav>
                </div>

                <!-- Inquiries Navigation -->
                <div style="position: relative;">
                    <button class="nav-btn" id="inquiries-btn" aria-haspopup="menu" aria-expanded="false">
                        <span>Inquiries</span>
                    </button>
                    <nav class="nav-popover" id="inquiries-menu" role="menu" hidden>
                        <a role="menuitem" href="/EmployeeView/EmployeeInquiryTracker/index.html">Track Inquiries</a>
                        <a role="menuitem" href="#">New Inquiry</a>
                    </nav>
                </div>

                <!-- Spaces Navigation -->
                <div style="position: relative;">
                    <button class="nav-btn" id="spaces-btn" aria-haspopup="menu" aria-expanded="false">
                        <span>Spaces</span>
                    </button>
                    <nav class="nav-popover" id="spaces-menu" role="menu" hidden>
                        <a role="menuitem" href="/EmployeeView/EmployeeBoardroomBooking/index.html">Book Space</a>
                        <a role="menuitem" href="#">My Bookings</a>
                    </nav>
                </div>
            </div>

            <!-- Right: Settings -->
            <div class="settings-nav" style="position: relative;">
                <button class="nav-btn" id="settings-btn" aria-haspopup="menu" aria-expanded="false">
                    <span class="hide-sm">Settings</span>
                </button>
                <nav class="nav-popover" id="settings-menu" role="menu" hidden>
                    <a role="menuitem" href="@Url.Action("Profile", "Account")">Profile</a>
                    <a role="menuitem" href="@Url.Action("Notifications", "Account")">Notifications</a>
                    <div class="menu-sep" role="separator"></div>
                    <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="danger">Sign out</button>
                    </form>
                </nav>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="booking-form">
            <h2 class="form-title">Schedule an Appointment</h2>
            <p class="form-subtitle">Choose between an online or in-person meeting with our team</p>

            <form id="appointmentForm">
                <!-- Appointment type selection -->
                <div class="form-group">
                    <label class="form-label">Appointment Type</label>
                    <div class="type-selector">
                        <div class="type-option" data-type="online">
                            <div class="type-name">Online Meeting</div>
                            <div class="type-desc">Video conference call</div>
                        </div>
                        <div class="type-option" data-type="physical">
                            <div class="type-name">In-Person</div>
                            <div class="type-desc">At our offices</div>
                        </div>
                    </div>
                    <input type="hidden" id="appointmentType" name="appointmentType" required>
                </div>

                
                <!-- Province -->
                <div class="form-group">
                    <label for="provinceSelect" class="form-label">Select Province</label>
                    <select id="provinceSelect" class="form-select">
                        <option value="">-- Choose Province --</option>
                        <!-- JS will populate from /api/appointment/provinces -->
                    </select>
                </div>

<!-- Advisor (note name="advisor" so backend receives the advisor ID) 
<div class="form-group mb-3">
  <label for="advisorSelect" class="form-label">Select Advisor</label>
  <select id="advisorSelect" name="advisor" class="form-control" disabled>
    <option value="">Select a province first</option>
  </select>
</div>
-->

<!-- Hidden field that will carry the chosen province to the server -->
<input type="hidden" id="provinceField" name="province" value="">


                <!-- Advisor selection -->
                <div class="form-group">
                    <label class="form-label">Select Advisor</label>
                    <div id="advisorOptions">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var advisor in Model)
                            {
                                <div class="advisor-option" data-advisor="@advisor.Id">
                                    <div class="advisor-avatar">@(advisor.Name.Split(' ').Select(n => n.FirstOrDefault()).Take(2).Aggregate("", (acc, c) => acc + c))</div>
                                    <div class="advisor-info">
                                        <div class="advisor-name">@advisor.Name</div>
                                        <div class="advisor-role">CHIETA Advisor</div>
                                        <div class="advisor-specialties">
                                            <span class="specialty-tag">General</span>
                                            <span class="specialty-tag">Support</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="no-advisors">
                                <p>No advisors available at the moment. Please try again later.</p>
                            </div>
                        }
                    </div>
                    <input type="hidden" id="selectedAdvisor" name="selectedAdvisor" required>
                </div>

                <div class="form-grid">
                    <!-- Date selection -->
                    <div class="form-group">
                        <label for="appointmentDate" class="form-label">Date</label>
                        <input type="date" id="appointmentDate" class="form-input" name="date" required min="">
                    </div>

                    <!-- Time selection -->
                    <div class="form-group">
                        <label class="form-label">Time Slot</label>
                        <div class="time-slots" id="timeSlots">
                            <!-- Time slots will be generated by JavaScript -->
                        </div>
                        <input type="hidden" id="appointmentTime" name="time" required>
                    </div>
                </div>

                <!-- Reason for appointment -->
                <div class="form-group">
                    <label for="appointmentReason" class="form-label">Reason for Appointment</label>
                    <select id="appointmentReason" class="form-select" name="reason" required>
                        <option value="">Select a reason</option>
                        <option value="Grant Application">Grant Application</option>
                        <option value="Bursary Inquiry">Bursary Inquiry</option>
                        <option value="Compliance Issue">Compliance Issue</option>
                        <option value="Skills Program">Skills Program</option>
                        <option value="Site Visit">Site Visit</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <!-- Additional details -->
                <div class="form-group">
                    <label for="appointmentDetails" class="form-label">Additional Details</label>
                    <textarea id="appointmentDetails" class="form-textarea" name="details" placeholder="Please provide any additional information that might be helpful..."></textarea>
                </div>

                <div class="form-actions">
                    <button type="submit" class="submit-btn" id="submitButton">Schedule Appointment</button>
                </div>
            </form>
        </div>
    </main>

    <!-- Confirmation Modal -->
    <div class="modal" id="confirmationModal">
        <div class="modal-content">
            <h3 class="modal-title" id="modalTitle">Appointment Scheduled</h3>
            <p class="modal-message" id="modalMessage">Your appointment has been successfully scheduled.</p>
            <div class="modal-actions">
                <button class="modal-btn cancel" id="modalClose">Close</button>
                <button class="modal-btn confirm" id="modalConfirm">OK</button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-band"><div class="gold-box"></div></div>
    </footer>
   <!-- <script src="~/Content/StakeholderView/js/StakeholderAppointmentBooking.js"></script> -->

    <script src="~/Content/AdminView/js/AppointmentBooking.js"></script>
</body>
</html>