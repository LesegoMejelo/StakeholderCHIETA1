@{
    Layout = null;
}

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Make An Appointment</title>
    <link rel="stylesheet" href="~/Content/StakeholderView/AppointmentBooking.css" />
</head>
<body>
    <header class="header" role="banner">
        <a asp-page="/Home.cshtml">
        <img class="logo" src="https://acfesa.co.za/sites/default/files/inline-images/CHIETA%20Logo.png" alt="CHIETA logo"  />
        </a>
    </header>

    <!-- Decorative circles  -->
    <div class="circle circle-large" data-speed="0.8" aria-hidden="true"></div>
    <div class="circle circle-medium" data-speed="1.2" aria-hidden="true"></div>
    <div class="circle circle-small" data-speed="1.6" aria-hidden="true"></div>

    <main class="container" role="main">
        <h1>Make An Appointment</h1>

        <form id="appointment-form" novalidate>
            <div class="form-group">
                <label for="advisor">Name of Advisor</label>
                <div class="field-wrap">
                    <select id="advisor" required>
                        <option value="">Name of Advisor</option>
                        <option value="John Smith">John Smith</option>
                        <option value="Sarah Johnson">Sarah Johnson</option>
                        <option value="Michael Brown">Michael Brown</option>
                    </select>
                </div>
                <p class="hint">Choose who you’d like to meet.</p>
            </div>

            <div class="form-group">
                <label for="reason">Reason For Appointment:</label>
                <textarea id="reason" placeholder="Write your reason here..." maxlength="300" required></textarea>
                <div class="meta-row">
                    <p class="hint">Keep it brief but clear (max 300 chars).</p>
                    <span id="char-count" class="count">0/300</span>
                </div>
            </div>

            <div class="date-time-wrapper">
                <div class="date-container">
                    <label for="date">Select date</label>
                    <input type="date" id="date" required>
                </div>

                <div class="time-container">
                    <label for="time">Enter time</label>
                    <input type="time" id="time" required>
                </div>
            </div>

            <button class="confirm-button" id="confirm-btn" type="submit" disabled>
                Confirm Appointment
            </button>
        </form>
    </main>

    <script src="~/wwwroot/Content/StakeholderView/js/StakeholderAppointmentBooking.js"></script>
</body>
</html>