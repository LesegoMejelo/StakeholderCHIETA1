@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Stakeholder Landing Page</title>
    <link rel="stylesheet" href="~/Content/EmployeeView/EmployeeLandingPage.css" asp-append-version="true" />
</head>
<body>

    <!-- Header -->
    <header class="topbar">
        <div class="container topbar-inner">
            <!-- Left: Brand -->
            <div class="brand">
                <img class="logo" src="/Content/StakeholderView/StakeholderLandingImages/Logo.png" alt="CHIETA logo" />
                <div class="divider"></div>
                <div class="page-title">Home</div>
            </div>

            <!-- Center: Navigation -->
            <div class="center-nav">
                <!-- Appointments Navigation -->
                <div class="nav-dropdown">
                    <button class="nav-btn" id="appointments-btn" aria-haspopup="menu" aria-expanded="false">
                        <span>Appointments</span>
                    </button>
                    <nav class="nav-popover" id="appointments-menu" role="menu" hidden>
                        <a role="menuitem" href="/Inquiry/TrackAppointment">My Appointments</a>
                        <a role="menuitem" href="/Appointment/Index">Schedule New</a>
                    </nav>
                </div>

                <!-- Inquiries Navigation -->
                <div class="nav-dropdown">
                    <button class="nav-btn" id="inquiries-btn" aria-haspopup="menu" aria-expanded="false">
                        <span>Inquiries</span>
                    </button>
                    <nav class="nav-popover" id="inquiries-menu" role="menu" hidden>
                        <a role="menuitem" href="/EmployeeView/EmployeeInquiryTracker/index.html">Track Inquiries</a>
                        <a role="menuitem" href="#">New Inquiry</a>
                    </nav>
                </div>

                <!-- Spaces Navigation -->
                <div class="nav-dropdown">
                    <button class="nav-btn" id="spaces-btn" aria-haspopup="menu" aria-expanded="false">
                        <span>Spaces</span>
                    </button>
                    <nav class="nav-popover" id="spaces-menu" role="menu" hidden>
                        <a role="menuitem" href="/EmployeeView/EmployeeBoardroomBooking/index.html">Book Space</a>
                        <a role="menuitem" href="#">My Bookings</a>
                    </nav>
                </div>
            </div>

            <!-- Right: Settings -->
            <div class="settings-nav">
                <button class="nav-btn" id="settings-btn" aria-haspopup="menu" aria-expanded="false">
                    <span class="hide-sm">Settings</span>
                </button>
                <nav class="nav-popover" id="settings-menu" role="menu" hidden>
                    <a role="menuitem" href="@Url.Action("Profile", "Account")">Profile</a>
                    <a role="menuitem" href="@Url.Action("Notifications", "Account")">Notifications</a>
                    <div class="menu-sep" role="separator"></div>
                    <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="danger">Sign out</button>
                    </form>
                </nav>
            </div>
        </div>
    </header>

    <main class="container page">

       <!--- Decorative shapes -->
        <div class="decor blob-right"></div>
        <div class="decor arc-left"></div>
        <div class="decor arc-right-bottom"></div>

       <!--  Welcome -->
        <section class="welcome">
            <h1>Welcome @User.Identity.Name</h1>
            <p class="tagline">This is your personalised landing page, equipped for your every need</p>

            <div class="summary-grid">
                <a id="link-appointments" class="summary-card" href="@Url.Action("TrackAppointment", "Inquiry")">
                    <h3>Upcoming Appointments</h3>
                    <ul id="upcoming-list" class="mini-list"><li class="muted">Loading..</li></ul>
                </a>

                <a id="link-inquiries" class="summary-card" href="@Url.Action("Tracking", "Inquiry")">
                    <h3>Recent Inquiries</h3>
                    <ul id="inquiries-list" class="mini-list"><li class="muted">Loading…</li></ul>
                </a>
            </div>
        </section>

        <hr class="divider" />

        <!-- Actions -->
        <section class="actions">
            <h2>Select your desired action</h2>
            <p class="sub">
                You can choose from the following depending on what you want to do. Each action allows you to interact with your advisor in an easier manner and you can see the progress of each.
            </p>

            <div class="actions-grid">
                <!-- Book an appointment-->
                <div class="action-card">
                    <div class="card-hero appointment-book-hero" aria-hidden="true"></div>
                    <div class="action-card-content">
                        <h3><a href="@Url.Action("Index", "Appointment")">Book an Appointment</a></h3>
                        <p>You can make an appointment with your Skills Advisor while communicating any specific information. From the booking, a confirmation will be sent along with an invite, depending on specifics.</p>
                        <button class="btn" data-nav="@Url.Action("Index", "Appointment")">Book</button>
                    </div>
                </div>

                 <!--Track Appointments-->
                <div class="action-card">
                    <div class="card-hero appointment-track-hero" aria-hidden="true"></div>
                    <div class="action-card-content">
                        <h3><a href="@Url.Action("TrackAppointment", "Inquiry")">Track your appointments</a></h3>
                        <p>You can track the status of all your appointments with the option of cancelling, if necessary</p>
                        <button class="btn" data-nav="@Url.Action("TrackAppointment", "Inquiry")">Track</button>
                    </div>
                </div>

                <!-- Log an Inquiry -->
                <div class="action-card">
                    <div class="card-hero inquiry-log-hero" aria-hidden="true"></div>
                    <div class="action-card-content">
                        <h3><a href="@Url.Action("Inquiry", "Inquiry")">Log an Inquiry</a></h3>
                        <p>If you have any questions regarding your advisory, you can log an inquiry with your advisor.</p>
                        <button class="btn" data-nav="@Url.Action("Inquiry", "Inquiry")">Log</button>
                    </div>
                </div>

                <!-- Track an Inquiry -->
                <div class="action-card">
                    <div class="card-hero inquiry-track-hero" aria-hidden="true"></div>
                    <div class="action-card-content">
                        <h3><a href="@Url.Action("Tracking", "Inquiry")">Track an Inquiry</a></h3>
                        <p>If you have logged an inquiry, you can now track its progress and status updates.</p>
                        <button class="btn" data-nav="@Url.Action("Tracking", "Inquiry")">Track</button>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer bar -->
    <footer class="footer">
        <div class="footer-band"></div>
        <div class="gold-box"></div>
    </footer>

    <script src="~/Content/StakeholderView/js/StakeholderLanding.js"></script>
</body>
</html>