@{
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Stakeholder Landing Page</title>
    <link rel="stylesheet" href="~/Content/EmployeeView/EmployeeLandingPage.css" />
</head>
<body>
    <!-- Top Bar -->
    <header class="topbar">
        <div class="container topbar-inner">
            <img class="logo" src="https://acfesa.co.za/sites/default/files/inline-images/CHIETA%20Logo.png" alt="CHIETA logo" />

            <!-- Settings in header -->
            <nav class="header-actions">
                <div class="menu" id="settings">
                    <button class="icon-btn" id="settings-btn" aria-haspopup="menu" aria-expanded="false">
                        <span class="hide-sm">Settings</span>
                    </button>

                    <div class="menu-popover" id="settings-menu" role="menu" hidden>
                        <a role="menuitem" href="@Url.Action("Profile", "Account")">Profile</a>
                        <a role="menuitem" href="@Url.Action("Notifications", "Account")">Notifications</a>
                        <div class="menu-sep" role="separator"></div>
                        <div class="menu-sep" role="separator"></div>
                        <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline;">
                            <button type="submit" class="danger">Sign out</button>
                        </form>

                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main class="container page">

       <!--- Decorative shapes -->
        <div class="decor blob-right"></div>
        <div class="decor arc-left"></div>
        <div class="decor arc-right-bottom"></div>

       <!--  Welcome -->
        <section class="welcome">
                    <h1>Welcome @User.Identity.Name</h1>
            <p class="tagline">This is your personalised landing page, equipt for your every need</p>

            <div class="summary-grid">
                <a id="link-appointments" class="summary-card" href="~/Views/StakeholdereViews/Appointment/Book.cshtml">
                    <h3>Upcoming Appointments</h3>
                    <ul id="upcoming-list" class="mini-list"><li class="muted">Loading..</li></ul>
                </a>

                <a id="link-inquiries" class="summary-card" href="~/Views/StakeholdereViews/Inquiry/Inquiry.cshtml">
                    <h3>Recent Inquiries</h3>
                    <ul id="inquiries-list" class="mini-list"><li class="muted">Loading…</li></ul>
                </a>
            </div>
        </section>

        <hr class="divider" />

        <!-- Actions -->
        <section class="actions">
            <h2>Select your desired action</h2>
            <p class="sub">
                You can choose from the following depending on what you want to do. Each action allows you to interact with your advisor in an easier manner and you can see the progress of each.
            </p>

            <div class="actions-grid">
                <div class="action-card">
                    <div class="card-hero" aria-hidden="true"></div>
                    <!-- Book an appointment-->
                 <h3> <a asp-controller="Appointment" asp-action="Index">Book an Appointment</a> </h3>
                    <p>You can make an appointment with your Skills Advisor while communicating any specific information. From the booking, a confirmation will be sent along with an invite, depending on specifics.</p>
                    <button class="btn" data-nav="appointment-booking.html">Go</button>
                </div>

                 <!--Track Appointments-->
                <div class="action-card">
                    <div class="card-hero" aria-hidden="true"></div>
                    <h3><a asp-controller="Appointment" asp-action="AppointmentTracker">Track your appointments</a></h3>
                    <p>You can track the status of all your appointments with the option of cancelling, if necessary</p>
                    <button class="btn" data-nav="inquiry-track.html">Go</button>
                </div>

                <!-- Log an Inquiry -->
                <div class="action-card">
                    <div class="card-hero" aria-hidden="true"></div>
                    <h3> <a asp-controller="Inquiry"  asp-action="Inquiry" > Log an Inquiry </a></h3>
                    <p>If you have any questions regarding your advisory, you can log an inquiry with your advisor.</p>
                    <button class="btn" data-nav="InquiryTracking.cshtml">Go</button>
                </div>

                <!-- Track an Inquiry -->
                <div class="action-card">
                    <div class="card-hero" aria-hidden="true"></div>
                    <h3> <a asp-controller="Inquiry" asp-action="InquiryTracking"> Track an Inquiry </a></h3>
                    <p>If you have logged an inquiry, you can now track it.</p>
                    <button class="btn" data-nav="inquiry-create.html">Go</button>
                </div>
                
                <!--Provide Feedback-->
                <div class="action-card">
                    <div class="card-hero" aria-hidden="true"></div>
                    <h3><a asp-controller="Inquiry" asp-action="Feedback">Rate your Advisor</a></h3>
                    <p>You can rate the service provided in your inquiries and appointments.</p>
                    <button class="btn" data-nav="inquiry-track.html">Go</button>
                </div>

                
            </div>
        </section>
    </main>

    <!-- Footer bar -->
    <footer class="footer">
        <div class="footer-band"></div>
        <div class="gold-box"></div>
    </footer>

    <script src="~/Content/StakeholderView/js/StakeholderLanding.js"></script>
</body>
</html>
